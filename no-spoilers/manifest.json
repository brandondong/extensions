{
  "manifest_version": 3,
  "name": "No Spoilers",
  "version": "0.1",
  "description": "Hides possible spoilers.",
  "content_scripts": [
    {
      "matches": [
        "https://*.twitch.tv/*"
      ],
      "css": [
        "twitch.css"
      ]
    },
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://*.youtube-nocookie.com/*"
      ],
      "all_frames": true,
      "css": [
        "youtube.css"
      ]
    },
    {
      "matches": [
        "https://*.reddit.com/r/leagueoflegends/"
      ],
      "css": [
        "reddit.css"
      ]
    }
  ]
}