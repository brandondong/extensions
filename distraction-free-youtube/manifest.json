{
  "manifest_version": 3,
  "name": "Distraction-free Youtube",
  "version": "0.1",
  "description": "Hides recommendations, opens Shorts in the normal video player, and other goodies.",
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://*.youtube-nocookie.com/*"
      ],
      "all_frames": true,
      "css": [
        "youtube.css"
      ],
      "js": [
        "youtube.js"
      ]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.youtube-nocookie.com/*"
  ]
}